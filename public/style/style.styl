/**
 * General styles
 */

@import 'nib'

@font-face
  font-family Dingbat
  font-style normal
  src url(../fonts/dingbatcobogo.ttf)

body
  font-size: 100%
  font-family: "Consolas", "Andale Mono WT", "Andale Mono", "Lucida Console", "Lucida Sans Typewriter", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Liberation Mono", "Nimbus Mono L", "Monaco", "Courier New", "Courier", monospace
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow-y: hidden
  overflow-x: hidden
  padding: 0
  margin: 0
  color: #2B2B2B
  background-color: #666666

#container
  width: 100%
  height: 920px

/**
 * Structural & Positioning styles
 */

.lightbox
  position: absolute
  width: 10%
  height: 10%
  top: 10%
  right: 2%
  background-color: #5f77cc
  opacity: 0.7
  border-width: 1px
  border-style: solid
  border-color: #2d367a
  border-radius: 10px
  text-align: center
  padding: 2px 0

.lightbox label
  display: inline-block
  text-align: left
  font-size: 0.8em

.lightbox input
  display: inline-block
  text-align: right

#forms
  position: absolute
  width: 48%
  height: 98%
  top: 0
  bottom: 0
  left: 0
  right: 50%
  font-family: "Dingbat"
  background-color: #1f5e61
  border-width: 2px
  border-style: outset
  border-color: #1f5e61
  border-radius: 20px
  margin: 10px
  z-index: 99
  text-align: center

#shapes
  position: absolute
  width: 48%
  height: 98%
  top: 0
  bottom: 0
  left: 50%
  right: 0
  font-family: "Dingbat"
  background-color: #4b1e1c
  border-width: 2px
  border-style: outset
  border-color: #4b1e1c
  border-radius: 20px
  margin: 10px
  text-align: center

.itemlist
  padding-left: 36%

.itemlist > div
  font-size: 15em
  width: 1em
  height: 182px
  text-align: center

.item
  color: #4dc668//#1650EE


.item-off
  color: #57c5b7 //#CFD4EB


.itemlist div:first-child
  margin-top: 10%

.itemlist div:last-child
  margin-bottom: 0


/**
 * Visor style -- To be splitted out
 */

#extra
  position: relative
  width: 96%
  height: 3em
  background-color: #14A62A
  border: 3px solid #4DBACD
  border-radius: 10px
  float: right
  margin-left: 2%
  margin-right: 2%
  margin-top: -5%
  z-index: 100

.statusEnabled
  display: block
  opacity: 0.8

.gesture-data
  position: absolute
  display: inline-block
  left: 0
  width: 60%
  height: 100%

.data-indicator
  display: inline-block
  width: 30%
  height: 100%
  float: left
  border-right: solid 1px #646C7B
  text-align: center

.data-label
  color: black
  font-size: 1em

.highlight
  background-color: yellow

/* ** Effects ** */

.invisible
  display: none
  visibility: hidden


.animated
  -webkit-animation-duration: 1s
  animation-duration: 1s
  -webkit-animation-fill-mode: both
  animation-fill-mode: both

@-webkit-keyframes wobble {
  0% {
    -webkit-transform: translateX(0%);
    transform: translateX(0%);
  }

  15% {
    -webkit-transform: translateX(-25%) rotate(-5deg);
    transform: translateX(-25%) rotate(-5deg);
  }

  30% {
    -webkit-transform: translateX(20%) rotate(3deg);
    transform: translateX(20%) rotate(3deg);
  }

  45% {
    -webkit-transform: translateX(-15%) rotate(-3deg);
    transform: translateX(-15%) rotate(-3deg);
  }

  60% {
    -webkit-transform: translateX(10%) rotate(2deg);
    transform: translateX(10%) rotate(2deg);
  }

  75% {
    -webkit-transform: translateX(-5%) rotate(-1deg);
    transform: translateX(-5%) rotate(-1deg);
  }

  100% {
    -webkit-transform: translateX(0%);
    transform: translateX(0%);
  }
}

@keyframes wobble {
  0% {
    -webkit-transform: translateX(0%);
    -ms-transform: translateX(0%);
    transform: translateX(0%);
  }

  15% {
    -webkit-transform: translateX(-25%) rotate(-5deg);
    -ms-transform: translateX(-25%) rotate(-5deg);
    transform: translateX(-25%) rotate(-5deg);
  }

  30% {
    -webkit-transform: translateX(20%) rotate(3deg);
    -ms-transform: translateX(20%) rotate(3deg);
    transform: translateX(20%) rotate(3deg);
  }

  45% {
    -webkit-transform: translateX(-15%) rotate(-3deg);
    -ms-transform: translateX(-15%) rotate(-3deg);
    transform: translateX(-15%) rotate(-3deg);
  }

  60% {
    -webkit-transform: translateX(10%) rotate(2deg);
    -ms-transform: translateX(10%) rotate(2deg);
    transform: translateX(10%) rotate(2deg);
  }

  75% {
    -webkit-transform: translateX(-5%) rotate(-1deg);
    -ms-transform: translateX(-5%) rotate(-1deg);
    transform: translateX(-5%) rotate(-1deg);
  }

  100% {
    -webkit-transform: translateX(0%);
    -ms-transform: translateX(0%);
    transform: translateX(0%);
  }
}

.wobble
  -webkit-animation-name: wobble
  animation-name: wobble

.itemlist.home > div
  opacity: 0.6
  border-width: 6px
  border-style: inset


/**
 * InteractiveApp styles
 */

.onDropZone, .onDropZone:before
  opacity: 1
  background-color: purple

