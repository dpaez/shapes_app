/**
 * General styles
 */

body
  font-size: 100%
  font-family: "Consolas", "Andale Mono WT", "Andale Mono", "Lucida Console", "Lucida Sans Typewriter", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Liberation Mono", "Nimbus Mono L", "Monaco", "Courier New", "Courier", monospace
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow-y: hidden
  overflow-x: hidden
  padding: 0
  margin: 0
  color: #2B2B2B

#container
  width: 100%
  height: 920px

/**
 * Structural & Positioning styles
 */

#forms
  background-color: #54E6DD
  border-width: 1px
  border-style: solid
  border-color: #230505
  height: 100%

#shapes
  background-color: #FBA752
  border-width: 1px
  border-style: solid
  border-color: #230505
  height: 100%
  float: right

.half
  width: 49%
  display: inline-block

.itemlist div
  text-align: center

#forms .circle
  position: absolute
  top: 10%
  left: 20%

#forms .square
  position: absolute
  top: 15%
  left: 20%

#forms .plus-sign
  position: absolute
  top: 67%
  left: 22%

#shapes .square
  position: absolute
  top: 15%
  right: 20%

#shapes .circle
  position: absolute
  top: 10%
  right: 20%

#shapes .plus-sign
  position: absolute
  top: 67%
  right: 22%


.itemlist div:first-child
  margin-top: 10%

.itemlist div:last-child
  margin-bottom: 0


/**
 * Visor style -- To be splitted out
 */

#extra
  position: relative
  left: 40%
  bottom: 305px
  min-height: 70px
  width: 160px
  float: right

#extra > h3
  margin-top: -30px

#extra > div
  box-shadow: 0 0 0 0.5em teal;
  border-radius: 0.6em
  margin-bottom: 30px
  overflow: hidden

.gesture-data
  position: absolute
  right: 4%
  top: 5%
  width: 150px
  height: 50px
  margin-top: 5px

.data-indicator
  width: 100%
  height: 100%
  border: solid 1px #14A62A
  border-radius: 10px
  text-align: center

.data-label
  color: black
  font-size: 1em

.highlight
  background-color: yellow

/* ** Effects ** */

.animated
  -webkit-animation-duration: 1s
  animation-duration: 1s
  -webkit-animation-fill-mode: both
  animation-fill-mode: both

@-webkit-keyframes wobble {
  0% {
    -webkit-transform: translateX(0%);
    transform: translateX(0%);
  }

  15% {
    -webkit-transform: translateX(-25%) rotate(-5deg);
    transform: translateX(-25%) rotate(-5deg);
  }

  30% {
    -webkit-transform: translateX(20%) rotate(3deg);
    transform: translateX(20%) rotate(3deg);
  }

  45% {
    -webkit-transform: translateX(-15%) rotate(-3deg);
    transform: translateX(-15%) rotate(-3deg);
  }

  60% {
    -webkit-transform: translateX(10%) rotate(2deg);
    transform: translateX(10%) rotate(2deg);
  }

  75% {
    -webkit-transform: translateX(-5%) rotate(-1deg);
    transform: translateX(-5%) rotate(-1deg);
  }

  100% {
    -webkit-transform: translateX(0%);
    transform: translateX(0%);
  }
}

@keyframes wobble {
  0% {
    -webkit-transform: translateX(0%);
    -ms-transform: translateX(0%);
    transform: translateX(0%);
  }

  15% {
    -webkit-transform: translateX(-25%) rotate(-5deg);
    -ms-transform: translateX(-25%) rotate(-5deg);
    transform: translateX(-25%) rotate(-5deg);
  }

  30% {
    -webkit-transform: translateX(20%) rotate(3deg);
    -ms-transform: translateX(20%) rotate(3deg);
    transform: translateX(20%) rotate(3deg);
  }

  45% {
    -webkit-transform: translateX(-15%) rotate(-3deg);
    -ms-transform: translateX(-15%) rotate(-3deg);
    transform: translateX(-15%) rotate(-3deg);
  }

  60% {
    -webkit-transform: translateX(10%) rotate(2deg);
    -ms-transform: translateX(10%) rotate(2deg);
    transform: translateX(10%) rotate(2deg);
  }

  75% {
    -webkit-transform: translateX(-5%) rotate(-1deg);
    -ms-transform: translateX(-5%) rotate(-1deg);
    transform: translateX(-5%) rotate(-1deg);
  }

  100% {
    -webkit-transform: translateX(0%);
    -ms-transform: translateX(0%);
    transform: translateX(0%);
  }
}

.wobble
  -webkit-animation-name: wobble
  animation-name: wobble

/**
 * Shapes styles
 */

